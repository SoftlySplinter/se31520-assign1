<!DOCTYPE html>
<html>
<head>
  <title><%= I18n.t('layout.title')%></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= params[:controller].parameterize %>_controller">

<div class="header">
      <%= render :partial=>'sessions/login' %>
      <div class="navigation">
      	<%= render_navigation %>
      </div>

      <% flash.each do |key,value| %>
        <span  id="flash" class="flash_<%= key %>" >
          <span id="flash_message"><%= value %></span>
        </span>
      <% end %>
      
      <!-- Blank URI so browser will request current page when form submitted -->
      <%= form_tag '', method: 'GET', class: 'locale' do %>
        <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale),\
                       onchange: 'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('.locale input').each(function(i) { this.hide; })" %>
      <% end %>

  </div>
  <div class="content">
      <%= yield %>
  </div>

  <div id="footer">
  </div>

</body>
</html>
